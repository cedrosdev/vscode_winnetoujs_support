{
  "version": "1.0.4",
  "name": "winnetoujs-vscode-framework",
  "publisher": "cedros-development",
  "displayName": "WinnetouJs Framework",
  "galleryBanner": {
    "color": "#8f4598",
    "theme": "dark"
  },
  "icon": "resources/extension-logo.png",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedrosdev/vscode_winnetoujs_support.git"
  },
  "description": "",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "winnetoujs.history.refresh",
        "title": "Refresh",
        "icon": "$(sync)"
      },
      {
        "command": "winnetoujs.strings.synchronize",
        "title": "Synchronize",
        "icon": "$(sync)"
      },
      {
        "command": "winnetoujs.strings.add",
        "title": "Add",
        "icon": "$(add)"
      },
      {
        "command": "winnetoujs.strings.changeLanguage",
        "title": "Change Language",
        "icon": "$(globe)"
      },
      {
        "command": "winnetoujs.strings.save",
        "title": "Apply changes",
        "icon": "$(save)"
      },
      {
        "command": "winnetoujs.strings.goto",
        "title": "Go to string"
      },
      {
        "command": "winnetoujs.strings.gotoAdd",
        "title": "Create new on goto"
      }
    ],
    "keybindings": [
      {
        "command": "winnetoujs.strings.goto",
        "key": "ctrl+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "winnetoujs.strings.gotoAdd",
        "key": "ctrl+shift+y",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "WinnetouSidebar",
          "title": "WinnetouJs",
          "icon": "resources/logo.png"
        }
      ]
    },
    "views": {
      "WinnetouSidebar": [
        {
          "name": "Bundler",
          "id": "bundlerWebView",
          "type": "webview"
        },
        {
          "name": "Strings",
          "id": "stringsWebview",
          "type": "webview"
        },
        {
          "name": "Bundles History",
          "id": "historyWebview",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "winnetoujs.strings.add",
          "group": "navigation@1",
          "when": "view == stringsWebview"
        },
        {
          "command": "winnetoujs.strings.changeLanguage",
          "group": "navigation@2",
          "when": "view == stringsWebview"
        },
        {
          "command": "winnetoujs.strings.synchronize",
          "group": "navigation@3",
          "when": "view == stringsWebview"
        },
        {
          "command": "winnetoujs.strings.save",
          "group": "navigation@4",
          "when": "view == stringsWebview"
        },
        {
          "command": "winnetoujs.history.refresh",
          "group": "navigation@1",
          "when": "view == historyWebview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36",
    "vscode-textmate": "^9.1.0"
  }
}
